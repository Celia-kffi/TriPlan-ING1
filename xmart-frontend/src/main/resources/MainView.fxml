<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.ezip.ing1.pds.MainController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom right, #d0f0fd, #7ec8e3);">

    <StackPane prefWidth="800" prefHeight="600">

        <!-- Menu latÃ©ral gauche -->
        <AnchorPane fx:id="leftMenu" prefWidth="200" prefHeight="600" layoutX="-200"
                    style="-fx-background-color: linear-gradient(to bottom right, #d0f0fd, #7ec8e3); -fx-opacity: 0.9;">
            <VBox alignment="CENTER" spacing="20" prefHeight="600">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <Text text="Menu"
                      style="-fx-font-size: 22px; -fx-fill: #01579b; -fx-font-weight: bold;"/>

                <Button text="TEST" onAction="#handleTest"
                        style="-fx-background-color: lightblue; -fx-font-size: 15px; -fx-background-radius: 12; -fx-padding: 10 20;"/>
            </VBox>
        </AnchorPane>

        <!-- Contenu principal -->
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding>
                <Insets top="40" right="20" bottom="20" left="20"/>
            </padding>

            <StackPane>
                <ImageView fitWidth="160" fitHeight="160" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@triplan_logo.png"/>
                    </image>
                    <clip>
                        <Rectangle width="160" height="160" arcWidth="40" arcHeight="40"/>
                    </clip>
                </ImageView>
            </StackPane>

            <Text text="Bienvenue chez TriPlan"
                  style="-fx-font-size: 26px; -fx-fill: #01579b; -fx-font-weight: bold;"/>
        </VBox>
    </StackPane>
</AnchorPane>
