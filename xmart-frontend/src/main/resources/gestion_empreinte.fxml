<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="edu.ezip.ing1.pds.EmpreinteCarboneController"
      spacing="10">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Label fx:id="labelHebergement" text="Hébergement : Aucun"/>
    <Label fx:id="labelTransport" text="Transport : Aucun"/>
    <Label fx:id="labelDistance" text="Distance : 0 km"/>
    <Label fx:id="labelNuits" text="Nuits : 0"/>

    <Button text="Choisir un hébergement" onAction="#allerVersHebergement"/>
    <Button text="Choisir un transport" onAction="#allerVersTransport"/>
    <Button text="Calculer l'empreinte carbone" onAction="#calculerEmpreinte"/>

    <Label fx:id="resultatLabel" text="Résultat ici..." style="-fx-font-weight: bold;"/>
</VBox>
