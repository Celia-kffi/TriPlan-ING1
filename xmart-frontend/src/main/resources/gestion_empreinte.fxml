<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="edu.ezip.ing1.pds.EmpreinteCarboneController">
    <children>
        <VBox spacing="10.0" alignment="TOP_CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Gestion des Empreintes Carbone" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <TableView fx:id="tableEmpreinte">
                <columns>
                    <TableColumn fx:id="colId" text="ID Empreinte" prefWidth="150"/>
                    <TableColumn fx:id="colKgCO2" text="Kg CO2" prefWidth="150"/>
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER">
                <Button text="Ajouter" onAction="#onAjouter"/>
                <Button text="Modifier" onAction="#onModifier"/>
                <Button text="Supprimer" onAction="#onSupprimer"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
