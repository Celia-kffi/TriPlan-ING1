<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="418.0" prefWidth="623.0" style="-fx-background-color: #18534F; -fx-background-image: carte.jpg;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ezip.ing1.pds.MoyenTransportController">

    <Label layoutX="20" layoutY="10" style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Sélection des moyens de transport" textFill="#67edff" />

    <Button layoutX="250" layoutY="380" onAction="#onValider" prefWidth="100" text="Valider" />
    <TableView fx:id="tableMoyenTransport" layoutX="10.0" layoutY="46.0" prefHeight="300" prefWidth="600" style="-fx-background-image: carte.jpg;">
        <columns>

            <TableColumn fx:id="colSelect" prefWidth="100" text="Sélectionner">
                <cellValueFactory>
                    <PropertyValueFactory property="selected" />
                </cellValueFactory>

            </TableColumn>


            <TableColumn fx:id="colId" prefWidth="100" text="ID">
                <cellValueFactory>
                    <PropertyValueFactory property="idMoyenDestination" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="colType" prefWidth="150" text="Type de transport">
                <cellValueFactory>
                    <PropertyValueFactory property="typeTransports" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="colFacteurEmission" prefWidth="150" text="Facteur d'émission">
                <cellValueFactory>
                    <PropertyValueFactory property="facteurEmission" />
                </cellValueFactory>
            </TableColumn>

            <TableColumn fx:id="colDistance" prefWidth="100" text="Distance (km)">
                <cellValueFactory>
                    <PropertyValueFactory property="distance" />
                </cellValueFactory>

            </TableColumn>
        </columns>
    </TableView>

</AnchorPane>
